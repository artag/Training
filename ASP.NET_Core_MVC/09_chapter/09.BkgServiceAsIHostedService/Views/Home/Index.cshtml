@using MonitorApp.Models
@model IReadOnlyCollection<Indication>

<!DOCTYPE html>

<html lang="ru">
<head>
    <title>Монитор</title>
    <link rel="stylesheet" href="lib/bootstrap/css/bootstrap.min.css"/>
</head>
<body>
<div>
    <div class="container">
        <div class="row">
            <h2>Производительность</h2>
            <div>
                <table class="table table-bordered table-striped">
                    <thead>
                    <tr>
                        <th>Номер</th>
                        <th>Время</th>
                        <th>Память, МБ</th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var row in Model)
                    {
                        <tr>
                            <td>@row.Id</td>
                            <td>@row.TimePoint.ToString("dd.MM.yyyy HH:mm:ss")</td>
                            <td>@string.Format("{0:#0.00}", row.Memory)</td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
</body>
</html>

<!-- Обновление представления (View) каждые 20 секунд  -->
<script type="text/javascript">
    setTimeout(function (){
        location = ''
    }, 20000);
</script>
