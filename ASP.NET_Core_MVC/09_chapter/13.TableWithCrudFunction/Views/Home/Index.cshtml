@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using System.Collections.Immutable;
@using TableCrud.Models;
@model ImmutableArray<Country>

<!DOCTYPE html>

<html lang="ru">
<head>
    <meta name="viewport" content="width=device-width"/>
    <link rel="stylesheet" href="lib/bootstrap/css/bootstrap.min.css"/>
    <title>Страны</title>
    <style type="text/css">
        /* Стили для хелпера валидации */
        .field-validation-error {
            color: #ff0000;
        }
        .field-validation-valid {
            display: none;
        }
        .input-validation-error {
            border: 1px solid #ff0000 !important;
            background-color: #ffeeee !important;
        }
        .validate-summary-errors {
            font-weight: bold; !important;
            color: #ff0000 !important;
        }
        .validation-summary-valid {
            display: none;
        }
    </style>
</head>
<body>
<div class="m-1 p-1">
    <h2>Список стран</h2>
    <div asp-validation-summary="All" form="FormForEdit">
    </div>
    <form asp-action="Add"
          asp-controller="Home"
          method="post">
        <div class="input-group mb-2">
            <input required name="Name"
                   class="form-control"
                   placeholder="Страна"
                   maxlength="30"/>
            <button type="submit"
                    class="btn btn-primary">
                Добавить
            </button>
        </div>
    </form>
    @if (TempData["messageDeleteInfo"] != null)
    {
        <div class="alert alert-info mt-1">
            @TempData["messageDeleteInfo"]
        </div>
    }
    @if (TempData["messageDeleteError"] != null)
    {
        <div class="alert alert-warning mt-1">
            @TempData["messageDeleteError"]
        </div>
    }
    <table class="table table-striped table-bordered">
        <thead>
        <tr>
            <th>Код</th>
            <th>Страна</th>
            <th class="text-center">Действие</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var row in Model)
        {
            if (row.Id == ViewBag.RowUpdate)
            {
                <tr>
                    <td>@row.Id</td>
                    <td>
                        <input required name="NameCountryForRow"
                               class="form-control form-control-sm"
                               placeholder="Страна"
                               value="@row.Name"
                               maxlength="30"
                               form="FormForEdit"/>
                    </td>
                    <td text-align="center">
                        <form id="FormForEdit" method="post">
                            <input type="hidden"
                                   name="deleteId"
                                   value="@row.Id"/>
                            <input type="hidden"
                                   name="saveId"
                                   value="@row.Id"/>
                            <div class="btn-group"
                                 role="group">
                                <button class="btn btn-sm btn-warning"
                                        formaction="/Home/Edit">
                                    Сохранить
                                </button>
                                <button class="btn btn-sm btn-info"
                                        formaction="/Home/CancelUpdate">
                                    Отмена
                                </button>
                                <button class="btn btn-sm btn-danger"
                                        onclick="return confirm('Вы уверены, что хотите удалить этот элемент?');"
                                        formaction="/Home/Delete">
                                    Удалить
                                </button>
                            </div>
                        </form>
                    </td>
                </tr>
            }
            else
            {
                <tr>
                    <td>@row.Id</td>
                    <td>@row.Name</td>
                    <td text-align="center">
                        <form method="post">

                        </form>
                    </td>
                </tr>
            }
        }
        </tbody>
    </table>
</div>
</body>
</html>