@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using TableSort.Models
@model IEnumerable<Person>

<!DOCTYPE html>

<html lang="ru">
<head>
    <title>Сортировка</title>
    <link rel="stylesheet" href="lib/bootstrap/css/bootstrap.min.css"/>
</head>
<body>
<div class="container">
    <div class="row">
        <h2>Клиенты</h2>
        <div>
            <table class="table table-bordered table-striped">
                <thead class="table-primary">
                <tr>
                    <th>
                        <a asp-action="Index"
                           asp-controller="Home"
                           asp-route-orderBy=@ViewBag.IdSort>Код</a>
                    </th>
                    <th><a asp-action="Index"
                           asp-controller="Home"
                           asp-route-orderBy="@ViewBag.FirstNameSort">Имя</a>
                    </th>
                    <th><a asp-action="Index"
                           asp-controller="Home"
                           asp-route-orderBy="@ViewBag.LastNameSort">Фамилия</a>
                    </th>
                    <th><a asp-action="Index"
                           asp-controller="Home"
                           asp-route-orderBy="@ViewBag.BirthDateSort">Дата рождения</a>
                    </th>
                </tr>
                </thead>
                <tbody>
                @foreach (var row in Model)
                {
                    <tr>
                        <td>@row.Id</td>
                        <td>@row.FirstName</td>
                        <td>@row.LastName</td>
                        <td>@row.BirthDate.ToString("dd.MM.yyyy")</td>
                    </tr>
                }
                </tbody>
                <tfoot>
                <tr>
                    <td colspan="3">Всего:</td>
                    <td>@Model.Count().ToString()</td>
                </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div>
</body>
</html>