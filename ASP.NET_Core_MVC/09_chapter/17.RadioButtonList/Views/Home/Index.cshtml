@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model SelectListItem[];

<!DOCTYPE html>

<html lang="ru">
<head>
    <meta name="viewport" content="width=device-width"/>
    <title>Фрукты</title>
</head>
<body>
<form method="post" asp-controller="Home" asp-action="Choose">
    @foreach (var fruit in Model)
    {
        <!--
        Атрибут name для всех переключателей одинаков - для группировки радиокнопок.
        Значение value передается в контроллер, в метод Choose.
        -->
        <input id="@fruit.Value"
               type="radio"
               name="Fruit"
               value="@fruit.Value"
               @(fruit.Selected ? "checked" : string.Empty) />

        <label for="@fruit.Value">@fruit.Text</label>
        <br/>
    }
    <br/>
    <input type="submit" value="Выбрать" />
</form>

@if (ViewBag.Message != null)
{
    <h3>@ViewBag.Message</h3>
}

</body>
</html>
