@model IEnumerable<ProductViewModel>

@{
    ViewBag.Title = "Домашняя страница";
}

<h2>Товары</h2>
@foreach (var product in @Model)
{
    <partial name="_Product" model="@product"/>
}

<div>
    <a asp-action="Create" asp-controller="Home">Добавить</a>
</div>

@section footer
{
    <div>
        Это нижний колонтитул домашней страницы
    </div>
}
