@model Product

@{
    ViewBag.Title = "Новый товар";
}

<div class="card">
    <div class="card-header">Новый товар</div>
    <div class="card-body">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="All"></div>
            <table>
                <tr>
                    <td><label asp-for="Name"></label></td>
                    <td><input asp-for="Name"/></td>
                    <td><span asp-validation-for="Name"></span></td>
                </tr>
                <tr>
                    <td><label asp-for="Price"></label></td>
                    <td><input asp-for="Price"></td>
                    <td><span asp-validation-for="Price"></span></td>
                </tr>
                <tr>
                    <td><label asp-for="ProductionDate"></label></td>
                    <td><input type="date" asp-for="ProductionDate"/></td>
                    <td><span asp-validation-for="ProductionDate"></span></td>
                </tr>
                <tr>
                    <td><label asp-for="CategoryId"></label></td>
                    <td>
                        <select asp-for="CategoryId"
                                asp-items="@(new SelectList(Categories.GetAll(), nameof(ProductType.Id), nameof(ProductType.TypeName)))"></select>
                    </td>
                    <td><span asp-validation-for="CategoryId"></span></td>
                </tr>
            </table>
            <input class="p-2 btn btn-primary" type="submit" value="Добавить"/>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Назад к списку</a>
</div>