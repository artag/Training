@model Product[]

@{
    ViewBag.Title = "Product Name";
}

<table>
    <thead>
    <tr>
        <th>Name</th>
        <th>Price</th>
    </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Name</td>
                <td>@($"{product.Price:C2}")</td>
            </tr>
        }
    </tbody>
</table>
