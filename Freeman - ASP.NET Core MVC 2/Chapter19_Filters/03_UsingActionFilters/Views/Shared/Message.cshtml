<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width"/>
    <title>Filters</title>
</head>

<body>

<div>
    @if (ViewData.Count > 0)
    {
        foreach (var kvp in ViewData)
        {
            <tr>
                <td><b>@kvp.Key</b></td>
                <td>@kvp.Value</td>
            </tr>
        }
    }
</div>

<div>
    @if (Model is string)
    {
        <b>Model: </b>@Model
    }
    else if (Model is IDictionary<string, string>)
    {
        var dict = Model as Dictionary<string, string>;
        <table>
            <thead>
            <tr>
                <th>Name</th><th>Value</th>
            </tr>
            </thead>

            <tbody>
            @foreach (var kvp in dict)
            {
                <tr>
                    <td><b>@kvp.Key</b></td>
                    <td>@kvp.Value</td>
                </tr>
            }
            </tbody>
        </table>
    }
</div>

</body>
</html>
