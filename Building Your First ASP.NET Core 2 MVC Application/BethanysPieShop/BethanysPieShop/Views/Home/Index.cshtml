@model HomeViewModel

<h2>@Model.Title</h2>

@foreach (var pie in Model.Pies)
{
    <div class="col-sm-4 col-lg-4 col-md-4">
        <div class="thumbnail">
            <img src="@pie.ImageThumbnailUrl" alt=""/>
            <div class="caption">
                <h3 class="pull-right">
                    @pie.Price.ToString("c")
                </h3>
                <h4>
                    @pie.Name
                </h4>
                <p>
                    @pie.ShortDescription
                </p>
            </div>
        </div>
    </div>
}
